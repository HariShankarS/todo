<div class="create-subtask">
<h1>New Task</h1>

 <%#= render partial: "form", locals: {task: @task} %>
 <% task = @task %>
<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :work %><br>
    <%= f.text_field :work, :class => "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.hidden_field(:parent_id, :value => params[:parent_id]) %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-raised btn-info"  %>
  </div>
<% end %>
<br>
<%= link_to 'Back', tasks_path, :class => "btn btn-raised btn-info" %>
</div>